{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Gnuplot",
			"command": "bash",
			"args": ["-c", "gnuplot ${fileBasenameNoExtension}.gp"],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"panel": "dedicated",
				"clear": true,
				"close": false
			},
			"options": {
				"cwd": "${fileDirname}"
			}
		},
		{
			"label": "View Gnuplot",
			"command": "bash",
			"args": ["-c", "evince ${fileBasenameNoExtension}.pdf"],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"panel": "dedicated",
				"clear": true,
				"close": true
			},
			"options": {
				"cwd": "${fileDirname}"
			}
		}
	]
}
